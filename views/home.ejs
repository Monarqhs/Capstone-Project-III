<%- include("partials/header") %>
<main>
    <div class="card">
        <h1>All Blog Posts</h1>
        <% if (posts.length > 0) { %>
            <ul>
                <% posts.forEach(post => { %>
                    <li>
                        <h2><%= post.title %></h2>
                        <p><%= post.content %></p>
                        <a href="/edit/<%= post.id %>" class="btn">Edit</a>
                        <form action="/delete/<%= post.id %>" method="POST" style="display: inline;">
                            <button type="submit" class="btn" style="background: red;">Delete</button>
                        </form>
                    </li>
                <% }) %>
            </ul>
        <% } else { %>
            <p>No posts available. <a href="/form" class="btn">Create one</a>.</p>
        <% } %>
    </div>
</main>
<%- include("partials/footer") %>
